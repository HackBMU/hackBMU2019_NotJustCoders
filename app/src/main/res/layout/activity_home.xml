<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:id="@+id/filter"

        />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFDBE8"
        android:alpha="0.7"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"

                android:background="@drawable/bg2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="CLORIFY"
                android:textSize="35sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="42dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonshape2"
            android:hint="Name"
            android:padding="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/defect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="42dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/buttonshape2"
            android:hint="Type of vision deficiency(If known)"
            android:padding="20dp"
            android:paddingTop="40dp" />
        <Button
            android:id="@+id/Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape2"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:text="Submit"


            />

        <Button
            android:id="@+id/opencamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape2"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:text="Open Camera"


            />
        <Button
            android:id="@+id/ishainitest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/buttonshape"
            android:padding="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:alpha="0.8"
            android:text="Ishihara color blind test" />


        <Button
            android:id="@+id/colour_blindtest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape"
            android:padding="20dp"
            android:alpha="0.8"
            android:textStyle="bold"
            android:text="Detect your colour deficiency" />

    </android.support.v7.widget.LinearLayoutCompat>

</RelativeLayout>